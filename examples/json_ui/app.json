{
  "$schema": "https://example.com/ui-schema.json",
  "type": "column",
  "props": {
    "padding": 20,
    "backgroundColor": "gray"
  },
  "children": [
    {
      "type": "h1",
      "children": ["Welcome to JSON UI"]
    },
    {
      "type": "text",
      "props": {
        "content": "This is a dynamic UI built from JSON with hot reload support!"
      }
    },
    {
      "$ref": "header.json",
      "props": {
        "title": "Dynamic Header"
      }
    },
    {
      "type": "row",
      "props": {
        "margin": 10
      },
      "children": [
        {
          "type": "button",
          "children": ["Click Me"]
        },
        {
          "type": "input",
          "props": {
            "placeholder": "Enter text here..."
          }
        }
      ]
    },
    {
      "$ref": "card.json",
      "props": {
        "title": "First Card",
        "content": "This card is loaded from a separate file"
      }
    },
    {
      "$ref": "card.json",
      "props": {
        "title": "Second Card",
        "content": "This demonstrates component reuse",
        "backgroundColor": "blue"
      }
    }
  ]
}